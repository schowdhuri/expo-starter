{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "TS Watcher",
      "type": "process",
      "command": "./node_modules/.bin/tsc",
      "isBackground": true,
      "args": ["--watch", "--noEmit"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "never",
        "echo": false,
        "focus": false,
        "panel": "dedicated"
      },
      "problemMatcher": "$tsc-watch",
      "runOptions": {
        "runOn": "folderOpen"
      }
    }
  ]
}
